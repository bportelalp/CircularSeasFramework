<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CircularSeasManager.Views.ImprimirLocal">
    <NavigationPage.TitleView>
        <Label Text="Archivos locales en el servidor" HorizontalTextAlignment="Center" VerticalTextAlignment="Start" TextColor="White" FontSize="Title"/>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout>

            <ListView ItemsSource="{Binding ficherosCollection}" SelectedItem="{Binding gcodeSeleccionado}" 
                      HorizontalOptions="CenterAndExpand">
            </ListView>
            <Label Text="{Binding gcodeSeleccionado}" />
            <Button Text="Enviar a imprimir" Command="{Binding CmdEnviarImprimir}" IsEnabled="{Binding IsSelectedGCODE}" />
            <Button Text="Eliminar archivo seleccionado" Command="{Binding CmdEliminar}" IsEnabled="{Binding IsSelectedGCODE}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>